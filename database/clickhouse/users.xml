<?xml version="1.0"?>
<clickhouse>
    <users>
        <!-- Default admin user with password -->
        <default>
            <!-- Password in plain text (will use environment variable) -->
            <password_sha256_hex from_env="CLICKHOUSE_PASSWORD_SHA256"/>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <access_management>1</access_management>
        </default>

        <!-- Custom user (username will be from environment variable) -->
        <clickhouse_user>
            <password_sha256_hex from_env="CLICKHOUSE_USER_PASSWORD_SHA256"/>
            <networks>
                <ip>::/0</ip>
            </networks>
            <profile>default</profile>
            <quota>default</quota>
            <databases>
                <database>*</database>
            </databases>
            <access_management>1</access_management>
        </clickhouse_user>
    </users>

    <profiles>
        <default>
            <max_memory_usage>10000000000</max_memory_usage>
            <use_uncompressed_cache>0</use_uncompressed_cache>
            <load_balancing>random</load_balancing>
        </default>
    </profiles>

    <quotas>
        <default>
            <interval>
                <duration>3600</duration>
                <queries>0</queries>
                <errors>0</errors>
                <result_rows>0</result_rows>
                <read_rows>0</read_rows>
                <execution_time>0</execution_time>
            </interval>
        </default>
    </quotas>
</clickhouse>
